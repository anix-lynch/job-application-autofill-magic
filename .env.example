# 🔐 SECURITY & SECRETS
# Copy this to .env (never commit this file!)

# 🔑 API Keys (encrypt these in production!)
SKYVERN_API_KEY=your_skyvern_api_key_here
BRAVE_API_KEY=your_brave_api_key_here  
CLAUDE_API_KEY=your_claude_api_key_here

# 🛡️ Security
ENCRYPTION_KEY=your_32_char_encryption_key_here
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600000

# 💰 Cost Controls
SKYVERN_MAX_CALLS_PER_DAY=100
CLAUDE_MAX_TOKENS_PER_REQUEST=4000
CLAUDE_MAX_TOKENS_PER_DAY=100000
COST_ALERT_THRESHOLD=50.00

# 🎯 Job Application Limits
MAX_APPLICATIONS_PER_HOUR=50
MAX_APPLICATIONS_PER_DAY=200
COVER_LETTER_CACHE_TTL=86400

# 🗃️ Database
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:pass@localhost:5432/jobautofill

# 🌐 Application
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# 🎨 Profile Settings (encrypted storage)
DEFAULT_PROFILE_PATH=/app/profiles/default-encrypted.json
PROFILE_ENCRYPTION_ENABLED=true

# 📊 Analytics & Monitoring
ENABLE_ANALYTICS=true
WEBHOOK_URL=https://your-n8n.app/webhook/job-results
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook